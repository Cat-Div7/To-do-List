{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",

    "lib": ["DOM", "ES2020"],

    "sourceMap": true,

    "strict": true,

    "allowJs": true,
    "checkJs": false,

    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
